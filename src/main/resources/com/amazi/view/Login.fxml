<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>

<StackPane prefWidth="1300.0" prefHeight="700.0" styleClass="main-bg"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.amazi.controller.LoginController">

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <Circle radius="300.0" styleClass="orb-blue" StackPane.alignment="TOP_LEFT">
        <StackPane.margin><Insets top="-100.0" left="-100.0"/></StackPane.margin>
    </Circle>
    <Circle radius="280.0" styleClass="orb-green" StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin><Insets bottom="-80.0" right="-80.0"/></StackPane.margin>
    </Circle>

    <VBox alignment="TOP_CENTER" maxWidth="650.0" maxHeight="600.0" spacing="20.0" styleClass="glass-card">
        <padding>
            <Insets top="25.0" right="40.0" bottom="25.0" left="40.0"/>
        </padding>

        <Circle radius="45.0" styleClass="profile-icon-placeholder" fill="#e2e8f0" stroke="#cbd5e1"/>

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Welcome TO Our Site" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
            <Label text="Please sign in to continue" styleClass="brand-subtitle"/>
        </VBox>

        <HBox alignment="CENTER" styleClass="role-pill-container" maxWidth="340.0" minHeight="45.0">
            <Button fx:id="adminTab" text="Admin" onAction="#handleTabSwitch" styleClass="pill-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button fx:id="staffTab" text="Staff" onAction="#handleTabSwitch" styleClass="pill-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button fx:id="studentTab" text="Student" onAction="#handleTabSwitch" styleClass="pill-button-active" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>

        <VBox spacing="20.0">
            <VBox spacing="8.0">
                <Label text="User Name" styleClass="sub-label"/>
                <TextField fx:id="emailField" promptText="Enter your user name" styleClass="modern-input" prefHeight="50.0"/>
            </VBox>
            <VBox spacing="8.0">
                <Label text="Password" styleClass="sub-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="modern-input" prefHeight="50.0"/>
            </VBox>
            <ComboBox fx:id="roleSelector" visible="false" prefHeight="0.0" />
        </VBox>

        <VBox spacing="20.0" alignment="CENTER" VBox.vgrow="ALWAYS" style="-fx-alignment: BOTTOM_CENTER;">
            <Button text="Sign In" onAction="#handleLogin" prefWidth="Infinity" styleClass="gradient-button" prefHeight="55.0"/>
            <Hyperlink text="Create a new student account" onAction="#handleCreateAccount" styleClass="forgot-link" style="-fx-font-weight: bold;"/>
            <Label fx:id="messageLabel" styleClass="error-text" wrapText="true"/>
        </VBox>
    </VBox>
</StackPane>