<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>

<StackPane prefWidth="650.0" prefHeight="700.0" styleClass="main-bg"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.amazi.controller.LoginController">

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <Circle radius="250.0" styleClass="orb-blue" StackPane.alignment="TOP_LEFT">
        <StackPane.margin><Insets top="-100.0" left="-100.0"/></StackPane.margin>
    </Circle>
    <Circle radius="180.0" styleClass="orb-green" StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin><Insets bottom="-80.0" right="-80.0"/></StackPane.margin>
    </Circle>

    <VBox spacing="25.0" alignment="CENTER" maxWidth="450.0" maxHeight="650.0" styleClass="glass-card">
        <padding>
            <Insets top="0.0" right="40.0" bottom="30.0" left="40.0"/>
        </padding>

        <HBox spacing="0" alignment="CENTER" prefHeight="55.0">
            <Button fx:id="adminTab" text="Admin" onAction="#handleTabSwitch"
                    styleClass="tab-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button fx:id="staffTab" text="Staff" onAction="#handleTabSwitch"
                    styleClass="tab-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button fx:id="studentTab" text="Student" onAction="#handleTabSwitch"
                    styleClass="tab-button-active" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="AMAZI" styleClass="brand-logo"/>
            <Label text="Digital Student Portfolio" styleClass="brand-subtitle"/>
        </VBox>

        <VBox spacing="20.0">
            <VBox spacing="8.0">
                <Label text="User Name" styleClass="input-label"/>
                <TextField fx:id="emailField" promptText="Enter your user name" styleClass="modern-input"/>
            </VBox>

            <VBox spacing="8.0">
                <Label text="Password" styleClass="input-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="modern-input"/>
                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" styleClass="forgot-link"/>
                </HBox>
            </VBox>

            <ComboBox fx:id="roleSelector" visible="false" managed="false" />
        </VBox>

        <VBox spacing="10.0" alignment="CENTER">
            <Button text="SIGN IN" onAction="#handleLogin" prefWidth="Infinity" styleClass="gradient-button"/>
            <Label fx:id="messageLabel" styleClass="error-text" wrapText="true" alignment="CENTER" minHeight="30.0"/>
        </VBox>

        <Separator opacity="0.2" maxWidth="200"/>

        <HBox spacing="10.0" alignment="CENTER">
            <Label text="New here?" styleClass="brand-subtitle" style="-fx-font-size: 14px;"/>
            <Button text="Create account" onAction="#handleCreateAccount" styleClass="create-account-btn"/>
        </HBox>
    </VBox>
</StackPane>