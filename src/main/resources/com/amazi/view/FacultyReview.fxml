<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>

<AnchorPane prefHeight="700.0" prefWidth="1300.0" styleClass="main-container"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.amazi.controller.FacultyReviewController">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox prefWidth="280.0" styleClass="sidebar">
            <padding><Insets left="30.0" right="30.0" top="50.0" /></padding>
            <Label styleClass="sidebar-logo" text="Instructor" />
            <Label styleClass="sidebar-subtitle" text="Instructor Suite">
                <VBox.margin><Insets bottom="50.0" /></VBox.margin>
            </Label>

            <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                <Button maxWidth="Infinity" styleClass="sidebar-btn-active" text="Student Records" alignment="BASELINE_LEFT" />
            </VBox>

            <Button fx:id="logoutButton" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-btn" text="Log Out">
                <VBox.margin><Insets bottom="40.0" /></VBox.margin>
            </Button>
        </VBox>

        <VBox spacing="30.0" HBox.hgrow="ALWAYS" styleClass="workspace">
            <padding><Insets bottom="35.0" left="45.0" right="45.0" top="35.0" /></padding>

            <HBox alignment="CENTER_LEFT">
                <VBox>
                    <Label styleClass="page-title" text="Academic Management" />
                    <Label styleClass="page-subtitle" text="Student Submission Records" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" prefWidth="320.0" promptText="Search student records..." styleClass="search-field" />
                <Region prefWidth="20.0" />
                <Circle fx:id="statusCircle" radius="7.0" fill="#10b981" />
            </HBox>

            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox HBox.hgrow="ALWAYS" styleClass="table-container">
                    <TableView fx:id="submissionTable" VBox.vgrow="ALWAYS" styleClass="modern-table">
                        <columns>
                            <TableColumn fx:id="colStudent" prefWidth="180.0" text="STUDENT" />
                            <TableColumn fx:id="colTitle" prefWidth="280.0" text="PROJECT" />
                            <TableColumn fx:id="colStatus" prefWidth="140.0" text="STATUS" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                </VBox>

                <ScrollPane fx:id="scrollWrapper" fitToWidth="true" hbarPolicy="NEVER"
                            style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;"
                            prefWidth="500.0" vbarPolicy="AS_NEEDED" visible="false" managed="false">

                    <VBox fx:id="detailsPane" spacing="15.0" styleClass="evaluation-toolkit-card">
                        <padding><Insets bottom="25.0" left="30.0" right="30.0" top="25.0" /></padding>

                        <Label text="RECORD DETAILS" styleClass="toolkit-header-small" />

                        <VBox spacing="5.0">
                            <Label fx:id="studentLabel" styleClass="detail-name-large" text="Select a Student" />
                            <Label fx:id="titleLabel" styleClass="detail-project-sub" text="Project description" wrapText="true" />
                        </VBox>

                        <VBox spacing="5.0" style="-fx-background-color: #f8fafc; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8;">
                            <Label text="EXTERNAL CONTEXT" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #64748b;" />
                            <HBox spacing="10">
                                <Label text="Org:" style="-fx-font-weight: bold; -fx-text-fill: #475569;" />
                                <Label fx:id="orgLabel" text="N/A" style="-fx-text-fill: #1e293b;" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #475569;" />
                                <Label fx:id="emailLabel" text="N/A" style="-fx-text-fill: #2563eb; -fx-underline: true;" />
                            </HBox>
                        </VBox>

                        <VBox spacing="8.0">
                            <Label text="STUDENT SUBMISSION CONTENT" styleClass="input-label-bold" style="-fx-text-fill: #1e293b;" />
                            <TextArea fx:id="submissionDescriptionArea" editable="false" prefHeight="150.0"
                                      promptText="Student work content will appear here..."
                                      styleClass="toolkit-text-area"
                                      style="-fx-control-inner-background: #f1f5f9; -fx-opacity: 0.9;" wrapText="true" />
                        </VBox>

                        <Separator />

                        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                            <Label text="Reviewer Feedback" styleClass="input-label-bold" />
                            <TextArea fx:id="feedbackArea" prefHeight="120.0" promptText="Enter feedback for student..."
                                      styleClass="toolkit-text-area" wrapText="true" />

                            <HBox spacing="15.0">
                                <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                                    <Label text="Final Grade" styleClass="input-label-bold" />
                                    <TextField fx:id="gradeField" promptText="e.g. A+" styleClass="toolkit-text-field" />
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                                    <Label text="Credit Hours" styleClass="input-label-bold" />
                                    <TextField fx:id="creditField" promptText="e.g. 3" styleClass="toolkit-text-field" />
                                </VBox>
                            </HBox>
                        </VBox>

                        <VBox spacing="10.0">
                            <Button maxWidth="Infinity" onAction="#handleApprove"
                                    styleClass="btn-approve-large" text="Update &amp; Approve" />
                            <HBox spacing="10.0">
                                <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handleRevision"
                                        styleClass="btn-needs-revision" text="Request Revision" />
                                <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handleReject"
                                        styleClass="btn-reject-red" text="Reject Record" />
                            </HBox>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>