<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<StackPane prefWidth="900.0" prefHeight="650.0"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.amazi.controller.RegisterController"
           styleClass="rg-water-root"
           stylesheets="@/css/style.css"> <Pane mouseTransparent="true">
    <Circle fx:id="bubble1" radius="250.0" styleClass="rg-bubble-top" layoutX="100.0" layoutY="100.0" />
    <Circle fx:id="bubble2" radius="180.0" styleClass="rg-bubble-bottom" layoutX="850.0" layoutY="550.0" />
</Pane>

    <VBox spacing="35.0" alignment="CENTER" maxWidth="450.0" maxHeight="600.0" styleClass="rg-glass-card">
        <padding>
            <Insets top="40.0" right="50.0" bottom="40.0" left="50.0"/>
        </padding>

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="AMAZI" styleClass="rg-water-logo"/>
            <Label text="Create your academic account" styleClass="rg-water-subtitle"/>
        </VBox>

        <VBox spacing="20.0">
            <TextField fx:id="nameField" promptText="Full Name" styleClass="rg-input-field"/>
            <TextField fx:id="emailField" promptText="University Email" styleClass="rg-input-field"/>

            <ComboBox fx:id="roleComboBox" prefWidth="Infinity" promptText="Select Role" styleClass="rg-input-field"/>

            <PasswordField fx:id="passwordField" promptText="Create Password" styleClass="rg-input-field"/>
        </VBox>

        <VBox spacing="15.0" alignment="CENTER">
            <Button text="Create Account" onAction="#handleRegistration" prefWidth="Infinity" styleClass="rg-liquid-btn"/>
            <Hyperlink text="Already a member? Sign in" onAction="#backToLogin" styleClass="rg-water-link"/>
        </VBox>

        <Label fx:id="messageLabel" styleClass="rg-error-txt" wrapText="true" alignment="CENTER" minHeight="25.0"/>
    </VBox>
</StackPane>